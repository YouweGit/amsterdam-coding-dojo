<?xml version="1.0"?>
<ruleset name="Magento_Exporter_Bundle">

    <file>src</file>
    <exclude-pattern>*\.(inc|css|js)</exclude-pattern>
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>test/*</exclude-pattern>

    <arg name="basepath" value="src"/>
    <arg name="colors" />
    <arg name="parallel" value="75" />
    <arg value="np"/>

    <rule ref="PSR1" />
    <rule ref="PSR2" />

</ruleset>